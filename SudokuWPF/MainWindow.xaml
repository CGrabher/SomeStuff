<Window
    x:Class="SudokuWPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SudokuWPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Sudoku Solver"
    Width="700"
    Height="700"
    MinWidth="600"
    MinHeight="600"
    Background="#AD8B73"
    Icon="C:\Users\Clemens Grabher\OneDrive\Lbsfe\VS\DISC\Sudoku_Favicon.jpg"
    mc:Ignorable="d">

    <Grid x:Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>


            <Button
                x:Name="txtBoxClear"
                Grid.Column="0"
                Margin="45,30,15,10"
                HorizontalAlignment="Stretch"
                Background="#FFFBE9"
                BorderBrush="Black"
                BorderThickness="2"
                Click="BoxClear_Click"
                Content="Clear"
                Cursor="Hand"
                FontSize="25"
                FontWeight="Bold">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="2"
                            CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#EEE3CB" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>

            </Button>

            <Button
                x:Name="txtBoxSample"
                Grid.Column="1"
                Margin="30,30,30,10"
                HorizontalAlignment="Stretch"
                Background="#FFFBE9"
                BorderBrush="Black"
                BorderThickness="2"
                Click="Sample_Click"
                Content="Sample"
                Cursor="Hand"
                FontSize="25"
                FontWeight="Bold">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="2"
                            CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#EEE3CB" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button
                x:Name="txtBoxSolve"
                Grid.Column="2"
                Margin="15,30,45,10"
                HorizontalAlignment="Stretch"
                Background="#FFFBE9"
                BorderBrush="Black"
                BorderThickness="2"
                Click="BoxSolve_Click"
                Content="Solve"
                Cursor="Hand"
                FontSize="25"
                FontWeight="Bold">

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="2"
                            CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#EEE3CB" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>

        <Popup
            x:Name="_myPopup"
            AllowsTransparency="True"
            IsOpen="False"
            Placement="Center"
            PlacementTarget="{Binding ElementName=mainWindow}">
            <Border
                Width="auto"
                Height="auto"
                Margin="10,10,10,10"
                Background="#FFFBE9"
                BorderBrush="Black"
                BorderThickness="5"
                CornerRadius="10">
                <Grid>
                    <TextBlock
                        x:Name="_myPopupTextblock"
                        Margin="15,15,15,15"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="Red" />

                    <Button
                        Margin="0,0,5,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Click="ClosePopupButton_Click"
                        Content="X"
                        FontSize="17"
                        FontWeight="Bold"
                        Foreground="Black" />
                </Grid>
            </Border>
        </Popup>

