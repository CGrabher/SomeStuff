                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="#EEE3CB" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>

        <Popup x:Name="_myPopup"
               IsOpen="False"
               AllowsTransparency="True"
               PlacementTarget="{Binding ElementName=mainWindow}"
               Placement="Center">
            <Border Background="#FFFBE9"
                    Width="auto"
                    Height="auto"
                    CornerRadius="10"
                    BorderBrush="Black"
                    BorderThickness="5"
                    Margin="10,10,10,10">
                <Grid>
                    <TextBlock Text="The table does not comply&#x0a;        the sudoku rules"
                               FontSize="40"
                               FontWeight="Bold"
                               Foreground="Red"
                               Margin="15,15,15,15"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />

                    <Button Content="X"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Margin="0,0,5,0"
                            FontWeight="Bold"
                            FontSize="17"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Foreground="Black"
                            Click="ClosePopupButton_Click" />
                </Grid>
            </Border>
        </Popup>

